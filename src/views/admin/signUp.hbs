<div class="block mx-auto my-12 p-8  w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800" style="background-color: #B4846C; font-family: 'Aclonica', sans-serif;">
    <h1 class="text-center fs-3 text-white" style="text-shadow: 0 0 0 #000000, -1px -1px 0 #000, 1px -1px 0 #000, -1px  1px 0 #000, 1px  1px 0 #000;">Registro administrador</h1>
    <form action="" method="post" class="mt-4">
        <input type="text" name="name" placeholder="Nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg:white rounded-md" required>
        <input type="email" name="email" placeholder="Correo electronico" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg:white rounded-md" required>
        <input type="password" name="password" placeholder="ContraseÃ±a" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg:white rounded-md" required>
        <input type="text" name="tipo" value="administrador" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg:white rounded-md" hidden required>
        <button type="submit" class="rounded-md w-full text-lg text-black p-2 my-3 text-white" style="background-color: #000000">Registrar</button>
    </form>
     {{#if error}}
        <p class="text-red-500 text-lg my-3 text-center" style="text-shadow: 0 0 0 #000000, -1px -1px 0 #000, 1px -1px 0 #000, -1px  1px 0 #000, 1px  1px 0 #000;">* {{error}}</p>
    {{/if}} 
</div>
