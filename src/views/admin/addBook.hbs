<div class="block mx-auto my-12 p-8  w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800" style="background-color: #B4846C; font-family: 'Aclonica', sans-serif;">
    <div>
        <h1 class="text-center fs-3 text-white" style="text-shadow: 0 0 0 #000000, -1px -1px 0 #000, 1px -1px 0 #000, -1px  1px 0 #000, 1px  1px 0 #000;">Registro libro</h1>
        <form action="" method="post" class="mt-4">
            <input type="text" name="titulo" placeholder="Titulo" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg:white rounded-md" required>
            <input type="text" name="autor" placeholder="Autor" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg:white rounded-md" required>
            <input type="text" name="imagen" placeholder="Imagen URL" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg:white rounded-md" required>
            <input type="text" name="descripcion" placeholder="Descripción" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg:white rounded-md" required>
            <input type="text" name="pdfurl" placeholder="PDF URL" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg:white rounded-md" required>
            <input type="number" name="precio" placeholder="Precio del libro" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg:white rounded-md" required>
            <select id="genreSelect" name="genero" class="form-select d-flex flex-column justify-content-center align-items-center text-white col-3 mt-2" style="background-color: #B4846C; width: 190px; height: 40px; border-radius: 20px; text-shadow: 0 0 0 #000000, -1px -1px 0 #000, 1px -1px 0 #000, -1px  1px 0 #000, 1px  1px 0 #000;">
                <option value="genero" style="display: none;">Género</option>
                <option value="Narrativa" name="Narrativa">Narrativa</option>
                <option value="Poesía" name="Poesía">Poesía</option>
                <option value="Drama" name="drama">Drama</option>
                <option value="Ensayo" name="Ensayo">Ensayo</option>
                <option value="Bio/Auto Grafía" name="Bio/Auto Grafía">Bio/Auto Grafía</option>
                <option value="Ciencia Ficción" name="Ciencia Ficción">Ciencia Ficción</option>
                <option value="Terror" name="Terror">Terror</option>
                <option value="Misterio" name="Misterio">Misterio</option>
                <option value="Romance" name="Romance">Romance</option>
            </select>
            <button type="submit" class="rounded-md w-full text-lg text-black p-2 my-3 text-white" style="background-color: #000000">Crear</button>
        </form>
        {{#if error}}
            <p class="text-red-500 text-lg my-3 text-center" style="text-shadow: 0 0 0 #000000, -1px -1px 0 #000, 1px -1px 0 #000, -1px  1px 0 #000, 1px  1px 0 #000;">* {{error}}</p>
        {{/if}} 
    </div>
</div>
